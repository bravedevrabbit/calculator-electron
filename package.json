{
  "name": "elcalc",
  "productName": "elcalc",
  "description": "Cross-Platform calculator built with Electron",
  "version": "6.0.1",
  "private": true,
  "author": {
    "name": "Antoni Kepinski",
    "email": "a@kepinski.me",
    "url": "https://kepinski.me"
  },
  "homepage": "https://github.com/elcalc/elcalc",
  "main": "app/background.js",
  "build": {
    "appId": "me.kepinski.elcalc",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "iconSize": 150
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "synopsis": "Cross-Platform Calculator",
      "description": "Cross-Platform calculator built with Electron.",
      "category": "Utility;Calculator"
    },
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "xo && stylelint 'src/stylesheets/*.css'",
    "start": "node build/start.js",
    "dist": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder --linux --win"
  },
  "dependencies": {
    "mathjs": "^6.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "ava": "^2.2.0",
    "babel-loader": "^8.0.6",
    "cache-loader": "^4.1.0",
    "clean-css-loader": "^2.0.0",
    "css-loader": "^3.1.0",
    "electron": "5.0.8",
    "electron-builder": "^21.1.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "fs-jetpack": "^2.2.2",
    "source-map-support": "^0.5.12",
    "spectron": "^7.0.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-xo": "^0.15.0",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2",
    "xo": "^0.24.0"
  },
  "xo": {
    "rules": {
      "no-mixed-operators": 0,
      "import/no-unassigned-import": 0
    },
    "envs": [
      "node",
      "browser"
    ]
  }
}
